<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="app.inf1d_team3.open_day">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".InstituteInfoActivity"
            android:parentActivityName=".OpenDaysActivity" />
        <activity
            android:name=".OpenDayActivity"
            android:parentActivityName=".OpenDaysActivity" />
        <activity android:name=".OpenDaysActivity">
            <tools:validation testUrl="https://www.hogeschoolrotterdam.nl/voorlichting/hulp-bij-studiekeuze/open-dag/programmas-open-dagen/open-dag-bachelors/open-dag-bachelor-voltijdduaal/open-dag-ba-informatica-vt/" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="https"
                    android:host="www.hogeschoolrotterdam.nl"
                    android:pathPrefix="/voorlichting/hulp-bij-studiekeuze/open-dag/programmas-open-dagen/" />
            </intent-filter>
        </activity>
    </application>

</manifest>